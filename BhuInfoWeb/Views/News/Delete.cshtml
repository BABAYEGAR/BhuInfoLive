@using BhuInfo.Data.Context.DataContext
@using BhuInfo.Data.Objects.Entities
@model BhuInfo.Data.Objects.Entities.News


@{
    ViewBag.Title = "Delete";
    var loggedinuser = Session["bhuinfologgedinuser"] as AppUser;

    var db = new AppUserDataContext();
}
@{
    Layout = "~/Views/Shared/_LayoutViewDetails.cshtml";
}
<div class="container">
    <div class="header-bottom">
        <div class="type">
            <h5>Article Management</h5>
        </div>
        <span class="menu"></span>
        <div class="list-nav">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "AppUsers")">Users</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "News")" class="active">News</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "NewsCategories")">News Category</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Events")">Events</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "SchoolDiscussions")">Discussions</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Advertisements")">Advertisment</a>
                </li>
            </ul>
        </div>
        <!-- script for menu -->
        <script>
            $("span.menu")
                .click(function() {
                    $(".list-nav")
                        .slideToggle("slow",
                            function() {
                                // Animation complete.
                            });
                });
        </script>
        <!-- script for menu -->

        <div class="clearfix"></div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="panel panel-flat">

            <div class="panel-body">
                <div class="col-md-8">
                    <div class="form-group col-md-12">
                        <div class="col-md-3">
                            @Html.DisplayNameFor(model => model.Title)
                        </div>

                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.Title)
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-3">
                            @Html.DisplayNameFor(model => model.Content)
                        </div>

                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.Content)
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-3">
                            @Html.DisplayName("Created By")
                        </div>

                        <div class="col-md-9">
                            @db.AppUsers.Find(Model.CreatedById).DisplayName
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="col-md-3">
                            @Html.DisplayName("Last ModifiedBy")
                        </div>

                        <div class="col-md-9">
                            @db.AppUsers.Find(Model.LastModifiedById).DisplayName
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-3">
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </div>

                        <div class="col-md-9">

                            @Html.DisplayFor(model => model.DateCreated)
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="col-md-3">
                            @Html.DisplayNameFor(model => model.DateLastModified)
                        </div>

                        <div class="col-md-9">

                            @Html.DisplayFor(model => model.DateLastModified)
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger pull-right"/>
                    @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-default pull-left"})
                </div>
            }
        </div>
    </div>
</div>