            <div class="panel-body">
                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <div class="col-md-3 detailsDiv">
                            @Html.DisplayNameFor(model => model.AdvertCompanyName)
                        </div>

                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.AdvertCompanyName)
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="col-md-3 detailsDiv">
                            @Html.DisplayNameFor(model => model.Title)
                        </div>

                        <div class="col-md-9 ">
                            @Html.DisplayFor(model => model.Title)
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-3 detailsDiv">
                            @Html.DisplayNameFor(model => model.Email)
                        </div>

                        <div class="col-md-9 ">

                            @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="col-md-3 detailsDiv">
                            @Html.DisplayNameFor(model => model.AdvertText)
                        </div>

                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.AdvertText)
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-3 detailsDiv">
                            @Html.DisplayNameFor(model => model.AccessCode)
                        </div>

                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.AccessCode)
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="col-md-3 detailsDiv">
