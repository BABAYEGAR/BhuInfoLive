@model BhuInfo.Data.Objects.Entities.NewsCategory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewBag.Header = "News Category";
    ViewBag.SubTitle = "Edit News Category";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal">
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.NewsCategoryId)
            @Html.Hidden("createdby", Model.CreatedById)
            @Html.Hidden("date", Model.DateCreated)

            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-3"})
                <div class="col-sm-6 col-md-9">
                    @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-default pull-left"})
        <input type="submit" value="Save" class="btn btn-primary pull-right"/>
    </div>
}