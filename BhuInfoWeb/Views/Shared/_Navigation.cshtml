@using BhuInfo.Data.Objects.Entities
@using BhuInfo.Data.Service.Encryption
@{
    var loggedinuser = Session["bhuinfologgedinuser"] as AppUser;
}
@if (loggedinuser != null)
{
    <ul class="nav navbar-right top-nav">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@loggedinuser.DisplayName <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <a href="@Url.Action("ProfileDetails", "Account", new {Id = new Md5Ecryption().EncryptPrimaryKey(loggedinuser?.AppUserId.ToString(), true)})"><i class="fa fa-fw fa-user"></i> Profile</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="@Url.Action("LogOut", "Account")"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                </li>
            </ul>
        </li>
    </ul>
}